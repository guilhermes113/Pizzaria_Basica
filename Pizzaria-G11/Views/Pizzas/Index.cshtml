@model IEnumerable<Pizza>

@{
    ViewData["Title"] = "Pizzas";
}
<div>
    <a asp-action="Criar" class="btn btn-block badge-success col-4-md"> Adicionar Pizza</a>
</div>
<div class="row">
    
    
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Nome
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImagemURL" width="100%" alt="@item.Nome">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text ">

                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Detalhes" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Detalhes
                                </a>
                                <a class="btn btn-success text-white @((DateTime.Now > item.DataAlteracao) ? "disabled" : "")"
                                   asp-controller="Pedidos"
                                   asp-action="AddItemAoCarrinho"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-cart-plus"></i> Adicionar ao Carrinho (Price @item.Preco.ToString("c"))
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
