@model IEnumerable<Tamanho>

<div> 
<table class="table table-striped table-dark table-hover table-bordered border-danger">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Nome)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tamanho in Model )
                {

                    <tr>
                        <td class="col-md-3">
                            <div class="d-flex flex-column ">
                                <a class="btn btn-primary mt-1 col-md-2" asp-action="Detalhes" asp-route-id="@tamanho.Id">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a class="btn btn-success mt-1 col-md-2" asp-action="Atualizar" asp-route-id="@tamanho.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                 </a>
                                <a class="btn btn-danger mt-1 col-md-2" asp-action="Deletar" asp-route-id="@tamanho.Id">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    
                        <td class="align-middle text text-center">@tamanho.Nome</td>
                    </tr>
                }
            </tbody>
        </table>
</div>
